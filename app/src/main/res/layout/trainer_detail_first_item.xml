<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_medium">

    <androidx.cardview.widget.CardView
        android:id="@+id/trainer_detail_first_item_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/trainer_detail_first_item_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trainer_detail_first_item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:contentDescription="@string/placeholder"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/trainer_detail_first_item_play_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:contentDescription="@string/play_icon"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/play_icon" />

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/trainer_detail_first_item_player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:visibility="invisible"
                app:fastforward_increment="10000"
                app:rewind_increment="10000" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/trainer_detail_first_item_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/joga_green"
        android:textSize="@dimen/header_text"
        app:layout_constraintEnd_toStartOf="@+id/trainer_detail_first_item_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_detail_first_item_card" />

    <TextView
        android:id="@+id/trainer_detail_first_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/default_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trainer_detail_first_item_video_title" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/secondary_text"
        app:layout_constraintTop_toBottomOf="@id/trainer_detail_first_item_video_title" />
</androidx.constraintlayout.widget.ConstraintLayout>